
public class Time {

	public static void main(String[] args) {
		
		int hour = 8;
		int minute = 13;
		int second = 43;
		
		int secondsSinceMidnight = hour * 3600 + minute * 60 + second;
		System.out.println("secondsSinceMidnight = " + secondsSinceMidnight);
		
		int secondsRemainingInDay = 24 * 3600 - secondsSinceMidnight;
		System.out.println("secondsRemainingInDay = " + secondsRemainingInDay);
	}

}
